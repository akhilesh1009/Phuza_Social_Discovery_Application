<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Light translucent yellow outer glow -->
    <item android:top="6dp" android:left="4dp" android:right="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#15FFFD74"/>
            <corners android:radius="32dp"/>
        </shape>
    </item>

    <!-- Mid translucent yellow -->
    <item android:top="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#30FFFD74"/>
            <corners android:radius="30dp"/>
        </shape>
    </item>

    <!-- Stronger translucent yellow -->
    <item android:top="1dp" android:left="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#50FFFD74"/>
            <corners android:radius="29dp"/>
        </shape>
    </item>

    <!-- Your ORIGINAL solid yellow (unchanged) -->
    <item android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFD74"/>
            <corners android:radius="28dp"/>
        </shape>
    </item>

</layer-list>
