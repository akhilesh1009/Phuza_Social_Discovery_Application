<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Phuza" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <!-- Base Phuza filled button style -->
    <style name="Widget.Material3.Button.Filled" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>

        <!-- Rounded & compact -->
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>

        <!-- Default colors (can still be overridden per-button with backgroundTint/textColor) -->
        <item name="backgroundTint">@color/slate_blue</item>
        <item name="android:textColor">@color/milk</item>

        <!-- Ripple -->
        <item name="rippleColor">@color/slate_blue_30</item>
    </style>

    <style name="PubGolfScoreCell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:text">â€“</item>
        <item name="android:textColor">@color/milk</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/sora_semibold</item>
        <item name="android:background">@drawable/bg_score_cell</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>


    <style name="Theme.Phuza" parent="Base.Theme.Phuza" />


    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="BottomSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Widget.MyApp.ToggleButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_height">40dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/toggle_button_bg</item>
        <item name="strokeColor">@android:color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/toggle_button_text</item>
    </style>

    <style name="StarIcon">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:src">@drawable/ic_star</item>
        <item name="tint">@color/yellow</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="AppBottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppBottomSheetStyle</item>
    </style>

    <style name="AppBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_round</item>
    </style>

</resources>