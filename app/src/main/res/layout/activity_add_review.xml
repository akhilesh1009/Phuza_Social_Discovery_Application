<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_background"
    tools:context=".AddReviewActivity">


    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp"
        android:paddingHorizontal="12dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:fontFamily="@font/sora_regular"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phuza_at"
            android:fontFamily="@font/termina_test_black"
            android:textColor="@color/yellow"
            android:textSize="16sp"
            android:letterSpacing="0.05"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Save -->
        <TextView
            android:id="@+id/tvSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:fontFamily="@font/sora_regular"
            android:textColor="@color/aquamarine"
            android:letterSpacing="0.02"
            android:textSize="14sp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/headerDivider"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#2B2B2B"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Content -->
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerDivider"
        app:layout_constraintBottom_toTopOf="@id/bottomNavBar">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingBottom="24dp">

            <!-- Place / item name -->
            <TextView
                android:id="@+id/tvPlaceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/place"
                android:fontFamily="@font/sora_semibold"
                android:textColor="@color/milk"
                android:textSize="20sp"
                android:letterSpacing="0.05"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

<!--        <EditText-->
<!--            android:id="@+id/etPlace"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="8dp"-->
<!--            android:padding="14dp"-->
<!--            android:background="@drawable/edittext_background"-->
<!--            android:textColor="@color/milk"-->
<!--            android:textColorHint="@color/mist"-->
<!--            android:focusable="true"-->
<!--            android:focusableInTouchMode="true"-->
<!--            android:cursorVisible="true"-->
<!--            android:inputType="text"-->
<!--            android:clickable="true"-->
<!--            app:layout_constraintTop_toBottomOf="@id/tvPlaceLabel"/>-->

        <TextView
            android:id="@+id/etPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="14dp"
            android:background="@drawable/review_add_card_bg"
            android:textColor="@color/milk"
            android:textSize="18sp"
            android:clickable="false"
            android:focusable="false"
            app:layout_constraintTop_toBottomOf="@id/tvPlaceLabel"/>





        <!-- Rating -->
            <TextView
                android:id="@+id/tvRatingLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rating"
                android:fontFamily="@font/sora_semibold"
                android:textColor="@color/milk"
                android:textSize="20sp"
                android:letterSpacing="0.05"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/etPlace"
                app:layout_constraintStart_toStartOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ratingCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="16dp"
            android:background="@drawable/rating_card_bg"
            app:layout_constraintTop_toBottomOf="@id/tvRatingLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

<!--            &lt;!&ndash; Date label &ndash;&gt;-->
<!--            <TextView-->
<!--                android:id="@+id/tvDateLabel"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Date"-->
<!--                android:textColor="@color/yellow"-->
<!--                android:textSize="14sp"-->
<!--                android:fontFamily="@font/sora_semibold"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintTop_toTopOf="parent"/>-->

<!--            &lt;!&ndash; Date value &ndash;&gt;-->
<!--            <TextView-->
<!--                android:id="@+id/tvDateValue"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Sunday, 3 August 2025"-->
<!--                android:textColor="@color/milk"-->
<!--                android:textSize="14sp"-->
<!--                android:layout_marginEnd="8dp"-->
<!--                android:fontFamily="@font/sora_regular"-->
<!--                app:layout_constraintBaseline_toBaselineOf="@id/tvDateLabel"-->
<!--                app:layout_constraintEnd_toEndOf="parent"/>-->

            <!-- Rate label -->
            <TextView
                android:id="@+id/tvRateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rate"
                android:textColor="@color/yellow"
                android:textSize="14sp"
                android:fontFamily="@font/sora_semibold"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />

<!--            app:layout_constraintTop_toBottomOf="@id/tvDateLabel"-->

            <!-- Like text -->
            <TextView
                android:id="@+id/tvLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/like"
                android:layout_marginEnd="8dp"
                android:textColor="@color/yellow"
                android:textSize="14sp"
                android:gravity="center"
                android:fontFamily="@font/sora_semibold"
                android:layout_marginTop="16dp"
                app:layout_constraintBaseline_toBaselineOf="@id/tvRateLabel"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Stars -->
            <LinearLayout
                android:id="@+id/ratingStars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvRateLabel"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/rStar1"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="@string/star"
                    android:src="@drawable/ic_star"
                    app:tint="@color/star_inactive" />

                <ImageView
                    android:id="@+id/rStar2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="@string/star"
                    android:layout_marginStart="6dp"
                    android:src="@drawable/ic_star"
                    app:tint="@color/star_inactive" />

                <ImageView
                    android:id="@+id/rStar3"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="@string/star"
                    android:layout_marginStart="6dp"
                    android:src="@drawable/ic_star"
                    app:tint="@color/star_inactive" />

                <ImageView
                    android:id="@+id/rStar4"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="@string/star"
                    android:layout_marginStart="6dp"
                    android:src="@drawable/ic_star"
                    app:tint="@color/star_inactive" />

                <ImageView
                    android:id="@+id/rStar5"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="@string/star"
                    android:layout_marginStart="6dp"
                    android:src="@drawable/ic_star"
                    app:tint="@color/star_inactive"/>
            </LinearLayout>

            <!-- Like icon -->
            <ImageView
                android:id="@+id/ivHeart"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_heart_outline"
                app:tint="@color/lavender"
                android:contentDescription="@string/like"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvLike"
                app:layout_constraintEnd_toEndOf="parent"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Short description -->
            <TextView
                android:id="@+id/tvDescLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_a_review"
                android:fontFamily="@font/sora_semibold"
                android:textColor="@color/milk"
                android:textSize="20sp"
                android:letterSpacing="0.05"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/ratingCard"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/review_add_card_bg"
                android:padding="18dp"
                android:textColor="@color/milk"
                android:textColorHint="@color/mist"
                android:textSize="16sp"
                android:minHeight="130dp"
                android:maxLines="6"
                android:inputType="textMultiLine"
                android:gravity="top|start"
                app:layout_constraintTop_toBottomOf="@id/tvDescLabel"/>

            <!-- Photo -->
            <TextView
                android:id="@+id/tvPhotoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_a_phuza_pic"
                android:fontFamily="@font/sora_semibold"
                android:textColor="@color/milk"
                android:textSize="20sp"
                android:letterSpacing="0.05"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/etDescription"
                app:layout_constraintStart_toStartOf="parent"/>



        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btnAddImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_camera"
            android:clipToOutline="true"
            android:scaleType="centerInside"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/add_photo"
            android:background="@drawable/dashed_border"
        app:shapeAppearanceOverlay="@style/RoundedImageView"
            app:layout_constraintTop_toBottomOf="@id/tvPhotoLabel"
            app:layout_constraintStart_toStartOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <include
        android:id="@+id/bottomNavBar"
        layout="@layout/activity_navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>
