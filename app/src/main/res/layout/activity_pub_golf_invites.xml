<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootInviteFriends"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ui_background"
    android:padding="16dp">

    <!-- Header Row with Back Arrow + Title (match notifications style) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnBackInviteFriends"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back"
            android:src="@drawable/ic_chevron_left"
            app:tint="@color/milk"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvInviteTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/invite_friends"
            android:textColor="@color/yellow"
            android:textSize="28sp"
            android:fontFamily="@font/termina_test_black"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <!-- Hint -->
    <TextView
        android:id="@+id/tvInviteHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pubgolf_invite_instruction"
        android:textColor="@color/mist"
        android:textSize="13sp"
        android:paddingBottom="8dp" />

    <!-- List + Empty state -->
    <FrameLayout
        android:id="@+id/friendsListContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFriends"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:overScrollMode="never" />

        <TextView
            android:id="@+id/tvEmptyFriends"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/no_friends_available_to_invite"
            android:gravity="center"
            android:fontFamily="@font/sora_semibold"
            android:textColor="@color/yellow"
            android:textSize="16sp"
            android:visibility="gone" />
    </FrameLayout>


    <Button
        android:id="@+id/btnSendInvites"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/send_invites"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:fontFamily="@font/sora_semibold"
        android:textSize="18sp"
        android:textAlignment="center"
        android:letterSpacing="0.05"
        android:background="@drawable/btn_main_custom"
        android:layout_marginBottom="48dp"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="52dp"
        android:layout_gravity="center_horizontal"
        app:backgroundTint="@null" />

</LinearLayout>
