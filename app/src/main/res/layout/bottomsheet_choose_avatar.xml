<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvChooseAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_an_avatar"
        android:fontFamily="@font/sora_regular"
        android:textColor="@color/yellow"
        android:textSize="23sp"
        android:letterSpacing="0.07"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- RecyclerView for avatars -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/avatarRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:layout_marginTop="24dp"
        android:overScrollMode="never"
        android:paddingTop="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        app:layout_constraintTop_toBottomOf="@id/tvChooseAvatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Confirm button -->
    <Button
        android:id="@+id/btnChooseAvatar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/confirm_avatar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/sora_regular"
        android:textSize="18sp"
        android:letterSpacing="0.05"
        android:background="@drawable/btn_secondary_custom"
        android:layout_marginTop="32dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:backgroundTint="@null"
        app:layout_constraintTop_toBottomOf="@id/avatarRecycler"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>





