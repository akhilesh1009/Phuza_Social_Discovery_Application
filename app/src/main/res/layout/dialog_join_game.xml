<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/ui_background">

    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/join_game"
        android:textColor="@color/yellow"
        android:textSize="18sp"
        android:fontFamily="@font/sora_semibold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvDialogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/you_ve_been_invited_to_join_this_pub_golf_game"
        android:textColor="@color/milk"
        android:textSize="14sp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/sora_regular" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnDecline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_thanks"
            android:fontFamily="@font/sora_medium"
            android:background="@drawable/btn_secondary_custom"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnJoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_main_custom"
            android:fontFamily="@font/sora_medium"
            android:text="@string/join_game"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:backgroundTint="@null"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>
