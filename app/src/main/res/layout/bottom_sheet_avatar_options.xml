<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/ui_background">

    <TextView
        android:id="@+id/titleBottomSheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_pic"
        android:textColor="@color/yellow"
        android:textSize="20sp"
        android:fontFamily="@font/sora_semibold"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnChooseAvatarSheet"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/btn_secondary_custom"
        android:fontFamily="@font/sora_semibold"
        android:letterSpacing="0.05"
        android:text="@string/choose_an_avatar"
        android:textAllCaps="false"
        android:textColor="@color/milk"
        android:textSize="18sp"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/btnUploadGallerySheet"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/btn_secondary_custom"
        android:fontFamily="@font/sora_semibold"
        android:letterSpacing="0.05"
        android:text="@string/upload_from_gallery"
        android:textAllCaps="false"
        android:textColor="@color/milk"
        android:textSize="18sp"
        app:backgroundTint="@null" />
</LinearLayout>
