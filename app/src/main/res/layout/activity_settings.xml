<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_background"
    android:padding="16dp"
    tools:context=".SettingsActivity">

    <!-- Back button -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/ui_background"
        android:contentDescription="@string/back"
        android:padding="12dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_round_arrow_back_24"
        app:tint="@color/milk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/termina_test_black"
        android:text="@string/settings"
        android:textColor="@color/yellow"
        android:textSize="32sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sora_semibold"
                android:paddingStart="24dp"
                android:paddingBottom="16dp"
                android:text="@string/account"
                android:textColor="@color/milk"
                android:textSize="24sp"
                tools:ignore="RtlSymmetry" />

            <LinearLayout
                android:id="@+id/edit_avatar_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingVertical="16dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/avatar"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:contentDescription="@string/avatar"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avatar_no_avatar"
                    app:shapeAppearanceOverlay="@style/CircleImageView" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/sora_semibold"
                    android:text="@string/edit_pic"
                    android:textColor="@color/milk"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:divider="@drawable/list_divider_settings"
                android:orientation="vertical"
                android:showDividers="middle|beginning|end">

                <include
                    android:id="@+id/settings_change_password"
                    layout="@layout/settings_list_item" />

                <include
                    android:id="@+id/settings_language_prefs"
                    layout="@layout/settings_list_item" />

                <LinearLayout
                    android:id="@+id/settings_biometric_toggle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/settings_biometric_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/sora_regular"
                        android:text="@string/enable_fingerprint_login"
                        android:textColor="@color/milk"
                        android:textSize="16sp" />

                    <Switch
                        android:id="@+id/switch_biometric"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="@color/switch_thumb_color"
                        android:track="@drawable/custom_switch_track" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
